{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist/server",
    "rootDir": "server",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./server/types"],
    "types": ["node", "express"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}